.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_pages_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Pages
    .inner
      %table.table
        %tr
          %th
            = t("activerecord.attributes.admin_page.key", :default => t("activerecord.labels.key", :default => "Key"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @pages.each do |page|
          %tr{:class => cycle("odd", "even")}
            %td
              = link_to page.key, admin_page_path(page)
            %td
              = page.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", admin_page_path(page)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_page_path(page)}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
