.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_pages_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_page_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.admin_page.key", :default => t("activerecord.labels.key", :default => "Key"))
          \:
        = @page.key
      %p
        %b
          = t("activerecord.attributes.admin_page.content", :default => t("activerecord.labels.content", :default => "Content"))
          \:
        = @page.content
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_page_path(@page), :class => "button"
- content_for :sidebar, render(:partial => 'sidebar')
