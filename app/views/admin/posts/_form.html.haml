= render "shared/error_messages", :resource => @post

.group
  = f.label :title, t("activerecord.attributes.post.title", :default => "Title"), :class => :label
  = f.text_field :title, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :content, t("activerecord.attributes.post.content", :default => "Content"), :class => :label
  = f.text_area :content, :class => 'text_area'
  %span.description Ex: a simple text
.group
  = f.label :description, t("activerecord.attributes.post.description", :default => "Description"), :class => :label
  = f.text_field :description, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :publish, t("activerecord.attributes.post.publish", :default => "Publish"), :class => :label
  = f.check_box :publish, :class => 'check_box'
  %span.description Ex: a simple text
.group
  = f.label :published_at, t("activerecord.attributes.post.published_at", :default => "Published at"), :class => :label
  = f.datetime_select :published_at, :class => 'datetime_select'
  %span.description Ex: a simple text
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), admin_posts_path, :class => "text_button_padding link_button"
