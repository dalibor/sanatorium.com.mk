.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_gallery_photos_path(@gallery)
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_gallery_photo_path(@gallery)
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Photos in
      = @gallery.name
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.admin_photo.image", :default => t("activerecord.labels.image", :default => "Image"))
          %th
            = t("activerecord.attributes.admin_photo.position", :default => t("activerecord.labels.position", :default => "Position"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @photos.each do |photo|
          %tr{:class => cycle("odd", "even")}
            %td
              = photo.id
            %td
              = link_to photo.image.to_s.split('/').last, admin_gallery_photo_path(@gallery, photo)
            %td
              = link_to(image_tag('go-down.png', :alt => 'Move lower', :title => 'Move lower'), move_lower_admin_gallery_photo_path(@gallery, photo), :method => :put) unless photo.last?
              = link_to(image_tag('go-up.png', :alt => 'Move higher', :title => 'Move higher'), move_higher_admin_gallery_photo_path(@gallery, photo), :method => :put) unless photo.first?
            %td
              = photo.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", admin_gallery_photo_path(@gallery, photo)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_gallery_photo_path(@gallery, photo)}
              |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_gallery_photo_path(@gallery, photo), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
        = will_paginate @photos
- content_for :sidebar, render(:partial => 'sidebar')
