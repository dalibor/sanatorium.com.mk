.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_gallery_photos_path(@gallery)
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_gallery_photo_path(@gallery)
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_gallery_photo_path(@gallery)
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Photo in
      = @gallery.name
    .inner
      = form_for @photo, :url => admin_gallery_photo_path(@gallery, @photo), :html => { :class => :form, :multipart => true } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
