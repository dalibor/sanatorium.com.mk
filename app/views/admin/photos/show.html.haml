.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_gallery_photos_path(@gallery)
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_gallery_photo_path(@gallery)
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_gallery_photo_path(@gallery)
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.admin_photo.gallery_id", :default => t("activerecord.labels.gallery_id", :default => "Gallery"))
          \:
        = @photo.gallery.name
      %p
        %b
          = t("activerecord.attributes.admin_photo.image", :default => t("activerecord.labels.image", :default => "Image"))
          \:
        = image_tag @photo.image_url(:thumb)
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_gallery_photo_path(@gallery, @photo), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_gallery_photo_path(@gallery, @photo), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
