.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_galleries_path
      %li.active= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_gallery_path
  .content
    %h2.title
      = t("web-app-theme.new", :default => "New")
      Gallery
    .inner
      = form_for :gallery, :url => admin_galleries_path, :html => { :class => :form, :multipart => true } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
