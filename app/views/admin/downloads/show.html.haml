.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_downloads_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_download_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_download_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.admin_download.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @download.name
      %p
        %b
          = t("activerecord.attributes.admin_download.attachment", :default => t("activerecord.labels.attachment", :default => "Attachment"))
          \:
        = link_to @download.attachment, @download.attachment.to_s
      %p
        %b
          = t("activerecord.attributes.admin_download.raw_type", :default => t("activerecord.labels.raw_type", :default => "Raw type"))
          \:
        = @download.raw_type
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_download_path(@download), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_download_path(@download), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
