.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_downloads_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_download_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Downloads
    .inner
      %table.table
        %tr
          %th.first Type
          %th
            = t("activerecord.attributes.admin_download.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th
            = t("activerecord.attributes.admin_photo.position", :default => t("activerecord.labels.position", :default => "Position"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @downloads.each do |download|
          %tr{:class => cycle("odd", "even")}
            %td
              = download.raw_type
            %td
              = link_to download.name, admin_download_path(download)
            %td
              = link_to(image_tag('go-down.png', :alt => 'Move lower', :title => 'Move lower'), move_lower_admin_download_path(download), :method => :put) unless download.last?
              = link_to(image_tag('go-up.png', :alt => 'Move higher', :title => 'Move higher'), move_higher_admin_download_path(download), :method => :put) unless download.first?
            %td
              = download.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", admin_download_path(download)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_download_path(download)}
              |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_download_path(download), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
        -#= will_paginate @downloads
- content_for :sidebar, render(:partial => 'sidebar')
