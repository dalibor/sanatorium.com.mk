.group
  = f.label :name, t("activerecord.attributes.download.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :name_en, t("activerecord.attributes.download.name_en", :default => "Name En"), :class => :label
  = f.text_field :name_en, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :attachment, t("activerecord.attributes.download.attachment", :default => "Attachment"), :class => :label
  = f.file_field :attachment, :class => 'file_field'
  %span.description Ex: a simple text
.group
  = f.label :raw_type, t("activerecord.attributes.download.raw_type", :default => "Raw type"), :class => :label
  = f.select :raw_type, Download::TYPES, :class => 'text_field'
  %span.description Ex: a simple text
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), admin_downloads_path, :class => "text_button_padding link_button"
