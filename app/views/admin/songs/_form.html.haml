.group
  = f.hidden_field :release_id
  = f.label :name, t("activerecord.attributes.song.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :lyrics, t("activerecord.attributes.song.lyrics", :default => "Lyrics"), :class => :label
  = f.text_area :lyrics, :class => 'text_area'
  %span.description Ex: a simple text
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), admin_release_songs_path(@release), :class => "text_button_padding link_button"
