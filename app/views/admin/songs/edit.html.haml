.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_release_songs_path(@release)
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_release_song_path(@release)
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_release_song_path(@release)
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Song
    .inner
      = form_for @song, :url => admin_release_song_path(@release, @song), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
