.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_release_songs_path(@release)
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_release_song_path(@release)
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_release_song_path(@release)
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.admin_song.release_id", :default => t("activerecord.labels.release_id", :default => "Release"))
          \:
        = @song.release.name
      %p
        %b
          = t("activerecord.attributes.admin_song.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @song.name
      %p
        %b
          = t("activerecord.attributes.admin_song.name_en", :default => t("activerecord.labels.name_en", :default => "Name En"))
          \:
        = @song.name_en
      %p
        %b
          = t("activerecord.attributes.admin_song.lyrics", :default => t("activerecord.labels.lyrics", :default => "Lyrics"))
          \:
        = @song.lyrics
      %p
        %b
          = t("activerecord.attributes.admin_song.lyrics_en", :default => t("activerecord.labels.lyrics_en", :default => "Lyrics En"))
          \:
        = @song.lyrics_en
      %p
        %b
          = t("activerecord.attributes.admin_song.position", :default => t("activerecord.labels.position", :default => "Position"))
          \:
        = @song.position
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_release_song_path(@release, @song), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_release_song_path(@release, @song), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
