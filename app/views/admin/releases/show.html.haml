.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_releases_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_release_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_release_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.admin_release.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @release.name
      %p
        %b
          = t("activerecord.attributes.admin_release.name_en", :default => t("activerecord.labels.name_en", :default => "Name En"))
          \:
        = @release.name_en
      %p
        %b
          = t("activerecord.attributes.admin_release.description", :default => t("activerecord.labels.description", :default => "Description"))
          \:
        = @release.description
      %p
        %b
          = t("activerecord.attributes.admin_release.description_en", :default => t("activerecord.labels.description_en", :default => "Description En"))
          \:
        = @release.description_en
      %p
        %b
          = t("activerecord.attributes.admin_release.year", :default => t("activerecord.labels.year", :default => "Year"))
          \:
        = @release.year
      %p
        %b
          = t("activerecord.attributes.admin_release.label", :default => t("activerecord.labels.label", :default => "Label"))
          \:
        = @release.label
      %p
        %b
          = t("activerecord.attributes.admin_release.cover", :default => t("activerecord.labels.cover", :default => "Cover"))
          \:
        = image_tag @release.cover_url(:thumb)
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_release_path(@release), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_release_path(@release), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
