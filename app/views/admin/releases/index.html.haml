.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_releases_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_release_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Releases
    .inner
      %table.table
        %tr
          %th
            = t("activerecord.attributes.admin_release.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @releases.each do |release|
          %tr{:class => cycle("odd", "even")}
            %td
              = link_to release.name, admin_release_path(release)
            %td
              = release.created_at
            %td.last
              = link_to "Songs", admin_release_songs_path(release)
              |
              = link_to "#{t("web-app-theme.show", :default => "Show")}", admin_release_path(release)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_release_path(release)}
              |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_release_path(release), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
        = will_paginate @releases
- content_for :sidebar, render(:partial => 'sidebar')
