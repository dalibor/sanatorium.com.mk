- title(t('menu.media'))
%section.downloads
  %h2.hidden= t('global.downloads')
  %article.download.video
    %h3.title= t('downloads.video')
    %ul
      - @downloads['Video'].each do |download|
        %li= link_to download.t(:name), download.attachment_url

  %article.download.audio
    %h3.title= t('downloads.audio')
