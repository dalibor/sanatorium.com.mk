      - @downloads['Audio'].each do |download|
        %li= link_to download.t(:name), download.attachment_url

  %article.download.interview
    %h3.title= t('downloads.interview')
    %ul
      - @downloads['Interview'].each do |download|
        %li= link_to download.t(:name), download.attachment_url

  %article.download.tabs
    %h3.title= t('downloads.tabs')
    %ul
