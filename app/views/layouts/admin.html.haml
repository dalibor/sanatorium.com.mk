!!!
%html
  %head
    %title Sanatorium :: Administration
    = stylesheet_link_tag "admin/application"
    = javascript_include_tag "admin/application"
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          %a{:href => "/"} Sanatorium
        #user-navigation
          %ul.wat-cf
            %li= link_to t("web-app-theme.settings", :default => "Settings"), edit_admin_user_path(:current)
            %li= link_to t("web-app-theme.logout", :default => "Logout"), session_path, :method => :delete, :class => "logout"
        #main-navigation
          %ul.wat-cf
            %li{:class => controller.controller_path == 'admin/users' ? 'active' : ''}
              %a{:href => admin_users_path} Users
            %li{:class => controller.controller_path == 'admin/posts' ? 'active' : ''}
              %a{:href => admin_posts_url} Posts
            %li{:class => controller.controller_path.in?(['admin/galleries', 'admin/photos']) ? 'active' : ''}
              %a{:href => admin_galleries_url} Galleries
            %li{:class => controller.controller_path == 'admin/downloads' ? 'active' : '' }
              %a{:href => admin_downloads_path} Downloads
            %li{:class => controller.controller_path.in?(['admin/releases', 'admin/songs']) ? 'active' : ''}
              %a{:href => admin_releases_path} Releases
            %li{:class => controller.controller_path == 'admin/pages' ? 'active' : '' }
              %a{:href => admin_pages_path} Pages
            %li{:class => controller.controller_path == 'admin/attachments' ? 'active' : '' }
              %a{:href => admin_attachments_path} Attachments
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
              %p
                Copyright &copy; 2002 - #{Time.now.year} sanatorium.com.mk.
        #sidebar
          = yield :sidebar
