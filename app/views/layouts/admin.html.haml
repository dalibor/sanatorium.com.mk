!!!
%html
  %head
    %title Sanatorium :: Administration
    = stylesheet_link_tag "admin/application", :cache => true
    = javascript_include_tag "admin/application", :cache => true
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          %a{:href => "/"} Administration
        #user-navigation
          %ul.wat-cf
            %li= link_to t("web-app-theme.settings", :default => "Settings"), edit_admin_user_path(:current)
            %li= link_to t("web-app-theme.logout", :default => "Logout"), session_path, :method => :delete, :class => "logout"
        #main-navigation
          %ul.wat-cf
            %li{:class => controller.controller_path == 'admin/users' ? 'active' : ''}
              %a{:href => admin_users_path} Users
            %li{:class => controller.controller_path == 'admin/posts' ? 'active' : ''}
              %a{:href => blog.admin_posts_url} Posts
            %li{:class => controller.controller_path == 'admin/comments' ? 'active' : ''}
              %a{:href => blog.admin_comments_url} Comments
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
              %p
                Copyright &copy; #{Time.now.year} sanatorium.com.mk.
        #sidebar
          = yield :sidebar
