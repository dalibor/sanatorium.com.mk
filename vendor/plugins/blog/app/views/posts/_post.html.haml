%article.post
  %header
    %h2= link_to post.title, blog.post_path(post)
    %div
      %time{:datetime => post.published_at}
        = time_ago_in_words post.published_at
        ago
      %span= link_to pluralize(post.comments_count, 'Comment'), blog.post_path(post) + '#comments'

  %section
    = raw find_and_preserve(post.content)
