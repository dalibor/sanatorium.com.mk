.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", blog.admin_comments_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", blog.new_admin_comment_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", blog.edit_admin_comment_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Comment
    .inner
      = form_for @comment, :url => blog.admin_comment_path(@comment), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
