.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", blog.admin_posts_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", blog.new_admin_post_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", blog.admin_post_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.admin_post.user_id", :default => t("activerecord.labels.user_id", :default => "User"))
          \:
        = @post.user.email
      %p
        %b
          = t("activerecord.attributes.admin_post.title", :default => t("activerecord.labels.title", :default => "Title"))
          \:
        = @post.title
      %p
        %b
          = t("activerecord.attributes.admin_post.content", :default => t("activerecord.labels.content", :default => "Content"))
          \:
        = @post.content
      %p
        %b
          = t("activerecord.attributes.admin_post.description", :default => t("activerecord.labels.description", :default => "Description"))
          \:
        = @post.description
      %p
        %b
          = t("activerecord.attributes.admin_post.publish", :default => t("activerecord.labels.publish", :default => "Publish"))
          \:
        = @post.publish
      %p
        %b
          = t("activerecord.attributes.admin_post.published_at", :default => t("activerecord.labels.published_at", :default => "Published at"))
          \:
        = @post.published_at
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), blog.edit_admin_post_path(@post), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), blog.admin_post_path(@post), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
