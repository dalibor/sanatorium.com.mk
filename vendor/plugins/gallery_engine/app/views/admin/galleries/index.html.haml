.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", gallery_engine.admin_galleries_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", gallery_engine.new_admin_gallery_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Galleries
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.admin_gallery.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @galleries.each do |gallery|
          %tr{:class => cycle("odd", "even")}
            %td
              = gallery.id
            %td
              = link_to gallery.name, gallery_engine.admin_gallery_path(gallery)
            %td
              = gallery.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", gallery_engine.admin_gallery_path(gallery)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", gallery_engine.edit_admin_gallery_path(gallery)}
              |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", gallery_engine.admin_gallery_path(gallery), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
